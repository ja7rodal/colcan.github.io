
<div class="row">

	<div class="col-sm-8"><h1 class="text-primary">Comprobantes</h1></div>
	<div class="col-sm-4"><%= link_to "Nuevo Comprobante", new_receipt_path, class: "btn btn-primary" %></div>
</div>

<div class="row">
	<div class="col-sm-9">
		<table class="table table-bordered table-hover table-striped">
			<thead>
				<tr>
					<th>Codigo</th>
					<th>Cliente</th>
					<th>Amount</th>
					<th>Edit</th>
					<th>A</th>
				</tr>
			</thead>
			<tbody>
				<% @receipts.each do |receipt| %>
				<tr>
					<td><%= link_to "Comp. "+receipt.id.to_s, receipt_path(receipt) %></td>
					<td><%= receipt.client.name %></td>
					<td><%= receipt.amount %></td>
					<td><%= link_to "<span class='glyphicon glyphicon-pencil'></span>".html_safe, edit_receipt_path(receipt)%></td>

					<td><%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, receipt, method: :delete, data: { confirm: "Are yoy sure?" }%></td>
				</tr>

				<% end %>
			</tbody>
		</table>


	</div>
</div>