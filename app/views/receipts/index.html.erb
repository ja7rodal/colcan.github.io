
<div class="row">

	<div class="col-sm-8"><h1 class="text-primary">Comprobantes</h1></div>
	<div class="col-sm-4"><%= link_to "Nuevo Comprobante", new_receipt_path, class: "btn btn-primary" %></div>
</div>

<div class="row">
	<div class="col-sm-9">
		<table class="table table-bordered table-hover table-striped">
			<thead>
				<tr>
					<th>Codigo</th>
					<th>Cliente</th>
					<th>Amount</th>
					<th>Estado</th>
				</tr>
			</thead>
			<tbody>
				<% @receipts.each do |receipt| %>
				<tr>
					<td><%= link_to "Comp. "+receipt.id.to_s, receipt_path(receipt) %></td>
					<td><%= receipt.client.name %></td>
					<td class="text-right"><%= number_to_currency(receipt.amount, precision: 1) %></td>
					<td></td>
				</tr>
				<% end %>
			</tbody>
		</table>


	</div>
</div>