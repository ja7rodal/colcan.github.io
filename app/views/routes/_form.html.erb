  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h2><%= form_title %></h2>

      <% if @route.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @route.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <%= form_for @route do |f| %>
      <div class="form-group">
        <%= f.text_field :ruta, class: "form-control input-lg" , placeholder: "Ingresa el nombre de la ruta" %>
      </div>



      <div class="form-group">
        <%= f.submit form_title, class: "btn btn-primary btn-lg" %>
      </div>

      <% end %>
    </div