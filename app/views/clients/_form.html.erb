<div class="row">
	<div class="col-sm-6 col-sm-offset-3">
		<h2><%= form_title_client %></h2>

		<% if @client.errors.any? %>
		<div class="alert alert-danger">
			<ul>
				<% @client.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
		<% end %>

		<%= form_for @client do |f| %>
		<div class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control input-lg" , placeholder: "Ingresa el nombre del cliente" %>
		</div>

		<div class="form-group">
			<%= f.label :address %>
			<%= f.text_field :address, class: "form-control input-lg" , placeholder: "Ingresa la direccion" %>
		</div>

		<div class="form-group">
			<%= f.label :phone %>
			<%= f.text_field :phone, class: "form-control input-lg" , placeholder: "Ingresa el telefono del cliete" %>
		</div>      
		<div class="form-group">
			<%= f.label :email %>
			<%= f.text_field :email, class: "form-control input-lg" , placeholder: "Ingresa el email del cliente" %>
		</div>



		<div class="form-group">
			<%= f.submit form_title_client, class: "btn btn-primary btn-lg" %>
		</div>

		<% end %>
	</div>
