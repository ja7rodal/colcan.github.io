
<div class="row">

	<div class="col-sm-8"><h1 class="text-primary">Clientes</h1></div>
	<div class="col-sm-4"><%= link_to "Nuevo Cliente", new_client_path, class: "btn btn-primary" %></div>
</div>

<div class="row">
	<div class="col-sm-9">
		<table class="table table-bordered table-hover table-striped">
			<thead>
				<tr>
					<th>Codigo</th>
					<th>Ruta</th>
					<th>Cliente</th>
					<th>Direccion</th>
					<th>Telefono</th>
					<th>E-mail</th>
					<th>Edit</th>
				</tr>
			</thead>
			<tbody>
				<% @clients.each do |client| %>
				<tr>
					<td><%= client.id %></td>
					<td><%= client.route.id %> : <%= client.route.ruta %></td>
					<td><%= link_to client.name, client_path(client) %></td>
					<td><%= client.address %></td>
					<td><%= client.phone %></td>
					<td><%= client.email %></td>
					<td><%= link_to "<span class='glyphicon glyphicon-pencil'></span>".html_safe, edit_client_path(client)%></td>

				</tr>
						
				<% end %>
			</tbody>
		</table>
		
		
	</div>
</div>